---
import './app.css';
import '@picocss/pico/css/pico.classless.pink.min.css';
import '@fontsource/ibm-plex-sans-jp';
import { SEO } from 'astro-seo';
---

<!doctype html>
<html lang='ja'>
  <head>
    <SEO
      title='DZ Quick Card by Dampuzakura'
      description='簡単に名刺を作成することができるアプリ'
      charset='utf-8',
      openGraph={{
        basic: {
          title: 'DZ Quick Card by Dampuzakura',
          type: 'website',
          image: './favicon.svg',
        },
      }}
      twitter={{
        creator: '@dampuzakura',
        title: 'DZ Quick Card by Dampuzakura',
        description: '簡単に名刺を作成することができるアプリ',
      }}
      extend={{
        link: [{ rel: 'icon', href: './favicon.svg' }],
        meta: [
          { name: 'viewport', content: 'width=device-width, initial-scale=1'},
          { name: 'color-scheme', content: 'light dark' },
        ],
      }}
    />
  </head>
  <body>
    <header>
      <h1>DZ Quick Card by Dampuzakura</h1>
      <p>
        簡単に名刺を作成することができるアプリです。
        クライアント上で作成されるため、安心してご利用いただけます。
      </p>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>© 2024 Dampuzakura. Licensed under the MIT License.</p>
    </footer>
  </body>
</html>
